<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewWhiteHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewWhiteHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewIconEmail"
        android:fontFamily="sans-serif"
        android:paddingLeft="11dp"
        android:paddingTop="11dp"
        android:text="email@yahoo.com"
        android:textColor="#ff7e00"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewSubHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewWhiteHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewIconEmail"
        android:fontFamily="sans-serif"
        android:paddingLeft="11dp"
        android:paddingTop="32dp"
        android:text="This will serve as your account login"
        android:textColor="#b2b2b2"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageViewIconEmail"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewWhiteHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_email" />
    
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/clickable_card_content_notice" >

    <TextView
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textLabel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="15dp"
        android:text="Address"
        android:textColor="@color/card_font_color_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textContentAddress"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="29 Sitio Upper Manalite II Brgy. Sta. Cruz Antipolo City Rizal 1270"
        android:textColor="#4c4c4c"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><layer-list>
            <item><shape>
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" android:radius="3dp" />

                    <solid android:color="#30CCCCCC" />
                </shape></item>
            <item><shape>
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" android:radius="3dp"/>

                    <solid android:color="#50CCCCCC" />
                </shape></item>

            <!-- Background -->
            <item><shape>
                    <solid android:color="@color/button_color" />

                    <corners android:radius="2dp" />
                </shape></item>
        </layer-list></item>
    <item android:state_pressed="true"><layer-list>
            <item><shape>
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" android:radius="3dp"/>

                    <solid android:color="#30CCCCCC" />
                </shape></item>
            <item><shape>
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" android:radius="3dp"/>

                    <solid android:color="#50CCCCCC" />
                </shape></item>

            <!-- Background -->
            <item><shape>
                    <solid android:color="@color/button_selected_color" />

                    <corners android:radius="2dp" />
                </shape></item>
        </layer-list></item>

</selector>
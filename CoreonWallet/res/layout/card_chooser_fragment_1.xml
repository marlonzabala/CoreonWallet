<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/card_horizontal_margin"
    android:paddingRight="@dimen/card_horizontal_margin" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >
<!--         android:paddingBottom="4dp" -->
<!--         android:paddingTop="4dp" -->

        <!-- android:background="@drawable/clickable_card_content" -->

        <ImageView
            android:id="@+id/imageViewCardShadow"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/cardshadow" />
<!--             android:paddingBottom="20dp" -->
<!--             android:paddingTop="20dp" -->

        <ImageView
            android:id="@+id/imageViewCard"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/card1" />

    </RelativeLayout>

</RelativeLayout>